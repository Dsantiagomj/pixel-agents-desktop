{
  "name": "pixel-agents-desktop",
  "version": "1.3.1",
  "description": "Standalone desktop app to visualize Claude Code agents as pixel art characters",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "node esbuild.main.mjs --watch",
    "dev:renderer": "cd renderer && npx vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "node esbuild.main.mjs",
    "build:renderer": "cd renderer && npm run build",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pngjs": "^6.0.5",
    "concurrently": "^9.0.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.0"
  }
}
